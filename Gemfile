# Use SCSS for stylesheets
gem 'sass-rails'

# Strategy to authenticate with Google via OAuth2 in OmniAuth.
gem 'omniauth-google-oauth2'

gem 'simple_form'
gem 'uglifier'

gem 'webpacker', '~> 3.0'
gem "geocoder"
gem 'nokogiri'
gem "jquery-slick-rails"


