<div class="navbar-wagon">
<!-- Logo -->
  <% if user_signed_in? %>

  <!-- Navbar right -->

  <!-- Profile picture with dropdown list -->
    <div class="navbar-wagon-item">
      <div class="dropdown">
        <%= image_tag "user.png", class: "avatar dropdown-toggle", id: "navbar-wagon-menu", data: { toggle: "dropdown" } %>
        <ul class="dropdown-menu dropdown-menu-left navbar-wagon-dropdown-menu">
          <li>
            <%= link_to root_path do %>
              <i class="fa fa-home"></i> Accueil
            <% end %>
          </li>
          <li>
            <%= link_to profile_path do %>
              <i class="fa fa-user"></i> <%= t(".profile", default: "Profile") %>
            <% end %>
          </li>
          <li>
            <%= link_to destroy_user_session_path, method: :delete do %>
              <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
            <% end %>
          </li>
        </ul>
      </div>
    </div>
    <div class="navbar-wagon-right">
      <div>

      </div>
    </div>
  <% else %>
  <!-- Login link (when logged out) -->
    <div class="connection">
      <%= link_to "Connexion", new_user_session_path %>
    </div>
  <% end %>
</div>
