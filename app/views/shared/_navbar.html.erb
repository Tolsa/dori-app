<div class="navbar-wagon">
  <!-- Logo -->
    <% if user_signed_in? %>

  <!-- Navbar right -->

    <!-- Profile picture with dropdown list -->
       <div class="navbar-wagon-item">
         <div class="dropdown">

          <% if current_user.image %>
            <%= image_tag current_user.image, class: "avatar dropdown-toggle", id: "navbar-wagon-menu", data: { toggle: "dropdown" } %>
          <% else %>
            <%= image_tag "placeholder-avatar.jpg", width: 100 %>
          <% end %>

        <ul class="dropdown-menu dropdown-menu-left navbar-wagon-dropdown-menu">
          <li>
            <%= link_to "#" do %>
              <i class="fa fa-user"></i> <%= t(".profile", default: "Profile") %>
            <% end %>
          </li>
          <li>
            <%= link_to destroy_user_session_path, method: :delete do %>
              <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
            <% end %>
          </li>
        </ul>
         </div>
       </div>


     <div class="navbar-wagon-right">
        <div>

      </div>
    </div>

    <% else %>
      <!-- Login link (when logged out) -->

      <div class="navbar-wagon-item-right">
        <div class="dropdown">
          <i class="fa fa-bars fa-lg dropdown-toggle" data-toggle="dropdown"></i>
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu-right">
            <li>
              <%= link_to t(".sign_in", default: "Se connecter"), new_user_session_path %>
            </li>
            <li>
              <%= link_to "Se connecter avec Google", user_google_oauth2_omniauth_authorize_path %>
            </li>
          </ul>
        </div>
      </div>


    <% end %>

</div>

